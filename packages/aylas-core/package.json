{
  "name": "@wpp-flow/aylas-core",
  "version": "1.0.0",
  "description": "Core TypeScript modules for Aylas WhatsApp CRM automation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts src/server.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --watch --format cjs",
    "start:server": "tsx src/server.ts",
    "dev:server": "tsx watch src/server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "whatsapp",
    "crm",
    "automation",
    "chatwoot",
    "n8n"
  ],
  "author": "wpp-flow-core",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "openai": "^4.24.7",
    "pdf-parse": "^1.1.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.8",
    "@types/pdf-parse": "^1.1.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
