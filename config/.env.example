# ===========================================
# CHATWOOT CONFIGURATION
# ===========================================
CHATWOOT_BASE_URL=https://app.chatwoot.com
CHATWOOT_API_ACCESS_TOKEN=your_api_access_token
CHATWOOT_ACCOUNT_ID=your_account_id

# Webhook (URL que o Chatwoot enviará eventos)
CHATWOOT_WEBHOOK_URL=https://your-n8n-instance.com/webhook/chatwoot

# ===========================================
# WHATSAPP CONFIGURATION
# ===========================================
# Meta/Facebook WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_API_TOKEN=your_api_token

# Evolution API (alternativa não-oficial)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_evolution_api_key

# ===========================================
# N8N CONFIGURATION
# ===========================================
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key

# ===========================================
# AI/LLM CONFIGURATION (opcional)
# ===========================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
